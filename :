        <div className="w-2/3 text-center">
          <span className="text-5xl inline-flex justify-center items-center w-full">
            <Icon className="mr-3" />
            {label}
          </span>
          <div className="mt-2 text-sm text-gray-300">
            <p className="text-xs mt-1">{systemReq}</p>
          </div>
